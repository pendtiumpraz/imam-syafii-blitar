# Database
# For Vercel deployment, use a cloud database like Neon, PlanetScale, or Supabase
DATABASE_URL="postgresql://user:password@host:port/database"

# Next Auth
# Update this to your Vercel deployment URL
NEXTAUTH_URL="https://your-app.vercel.app"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Application Settings
NODE_ENV="production"

# PWA Settings
NEXT_PUBLIC_PWA_NAME="Pondok Imam Syafi'i Blitar"
NEXT_PUBLIC_PWA_SHORT_NAME="Pondok Imam"
NEXT_PUBLIC_PWA_DESCRIPTION="Aplikasi Manajemen Pondok Imam Syafi'i Blitar"